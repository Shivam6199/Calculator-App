<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvEnter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:text=""
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="20dp"
            android:gravity="center"
            android:text=""
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            android:id="@+id/btAc"
            style="@style/buttonNo"
            android:text="AC">

        </Button>
        <Button style="@style/buttoOperation"
            android:id="@+id/btDiv"
            android:text="/">

        </Button>


    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button style="@style/buttonNo"
            android:id="@+id/seven"
            android:text="7">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/eight"
            android:text="8">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/nine"
            android:text="9">

        </Button>

        <Button style="@style/buttoOperation"
            android:id="@+id/x"
            android:text="X">

        </Button>


    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button style="@style/buttonNo"
            android:id="@+id/four"
            android:text="4">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/five"
            android:text="5">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/six"
            android:text="6">

        </Button>

        <Button style="@style/buttoOperation"
            android:id="@+id/sub"
            android:text="-">

        </Button>


    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button style="@style/buttonNo"
            android:id="@+id/one"
            android:text="1">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/two"
            android:text="2">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/three"
            android:text="3">

        </Button>

        <Button style="@style/buttoOperation"
            android:id="@+id/plus"
            android:text="+">

        </Button>


    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button style="@style/buttonNo"
            android:id="@+id/dot"
            android:text=".">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/zero"
            android:text="0">

        </Button>

        <Button style="@style/buttonNo"
            android:id="@+id/equal"
            android:layout_weight="2"
            android:text="="
            android:background="@color/orange">

        </Button>


    </LinearLayout>


</LinearLayout>